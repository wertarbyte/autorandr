#!/bin/sh
#
# 40autorandr: Change autorandr profile on thaw/resume

AUTORANDR="autorandr -c"

detect_display()
{
	for X in /tmp/.X11-unix/X*; do
		D="${X##/tmp/.X11-unix/X}"
		user=$(who | awk -vD="$D" '$5 ~ "\\(:"D"\\)$" {print $1}')
		if [ x"$user" != x"" ]; then
			export DISPLAY=":$D"
			/bin/su -c "${AUTORANDR}" "$user"
		fi
	done
}

case "$1" in
	thaw|resume)
		detect_display
		;;
esac
